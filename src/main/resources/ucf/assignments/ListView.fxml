                     <image>
                        <Image url="@../../icons/plus.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets left="12.0" />
               </padding>
            </Button>
         </children>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@../../css/ListStyle.css" />
      <URL value="@../../css/DefaultStyle.css" />
   </stylesheets>
</AnchorPane>
